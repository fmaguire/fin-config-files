set nocompatible
syntax enable
set encoding=utf-8
set showcmd
filetype plugin indent on

set tabstop=4 shiftwidth=4
set expandtab

set hlsearch
set incsearch
set ignorecase
set smartcase
set number
set laststatus=2
set statusline=%F%m%r%h%w\ (%{&ff}){%Y}\ [%l,%v][%p%%]

inoremap jj <Esc>

colorscheme darkblue
